
#!/bin/bash
clear
[[ "$(whoami)" != "root" ]] && {
echo -e "\033[1;33m[\033[1;31mError\033[1;33m] \033[1;37m- \033[1;33mâ—‡ YOU NEED TO RUN AS ROOT!\033[0m"
rm $HOME/setup > /dev/null 2>&1; exit 0
}

select_vps_manager(){
    echo "SELECT VPS TO INSTALL"
    echo "[1] SSH VPS MANAGER    [2] SOCKSIP UDP SERVER    [3] BOTH"
    read -p "Enter your choice: " choice
    case $choice in
        1)
            echo "Installing SSH SERVER ..."
            apt-get update -y
            apt-get upgrade -y
            rm hehe*
            wget https://raw.githubusercontent.com/OfficialOnePesewa1990/Official-OnePesewa-VPS-Manager/main/setup
            chmod 777 setup
            ./setup
            ;;
        2)
            echo "Installing UDP server..."
            wget https://raw.githubusercontent.com/rudi9999/SocksIP-udpServer/main/UDPserver.sh
            chmod +x UDPserver.sh
            ./UDPserver.sh
            ;;
        3)
            echo "Installing SSH and UDP servers..."
            # Install SSH Server
            apt-get update -y
            apt-get upgrade -y
            rm hehe*
            wget https://raw.githubusercontent.com/OfficialOnePesewa1990/Official-OnePesewa-VPS-Manager/main/setup
            chmod 777 setup
            ./setup
            # Install UDP Server
            wget https://raw.githubusercontent.com/rudi9999/SocksIP-udpServer/main/UDPserver.sh
            chmod +x UDPserver.sh
            ./UDPserver.sh
            ;;
        *)
            echo "Invalid choice. Please try again."
            select_vps_manager
            ;;
    esac
}

select_vps_manager
